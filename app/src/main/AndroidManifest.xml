<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pengembangsebelah.calculatorrab">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.SplashBeg"
            android:theme="@style/AppThemeNoAction">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PaduanActi"
            android:label="Panduan Penggunaan"
            android:parentActivityName=".splash" />
        <activity
            android:name=".ui.KopetensiDasar"
            android:label="Kompetensi Dasar"
            android:parentActivityName=".splash" />
        <activity
            android:name=".ui.Profile"
            android:label="Profil"
            android:parentActivityName=".splash" />
        <activity
            android:name=".splash"
            android:theme="@style/AppThemeNoAction">
        </activity>
        <activity
            android:name=".EditPekerjaan"
            android:label="@string/title_activity_analisa"
            android:parentActivityName=".DetailActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".ui.UpdateAnalisaActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".DetailActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoAction" />
    </application>

</manifest>