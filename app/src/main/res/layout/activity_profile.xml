<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo_trans"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:fontFamily="@font/fira_family2"
                android:background="@drawable/button_back"
                android:textColor="@color/blacji"
                android:layout_width="200dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Pembimbing"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:padding="5dp"
                android:src="@drawable/a3"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ImageView>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drs.Darmono, M.T."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:background="@drawable/button_back"
                android:textColor="@color/blacji"
                android:layout_width="200dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Kreator"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:padding="5dp"
                android:src="@drawable/fa1"
                android:id="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ahmad Fatwa Falah"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:background="@drawable/button_back"
                android:textColor="@color/blacji"
                android:layout_width="200dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Validator Media"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:padding="5dp"
                android:src="@drawable/a1"
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="200dp"/>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr.Nuryadin Eko Raharjo, M.Pd."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:background="@drawable/button_back"
                android:textColor="@color/blacji"
                android:layout_width="200dp"
                android:padding="10dp"
                android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="Validator Materi"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>

            <ImageView
                android:padding="5dp"
                android:src="@drawable/a2"
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="200dp">

            </ImageView>

            <TextView
                android:fontFamily="@font/fira_family2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dr.Sativa,S.T.,M.T."
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold">
            </TextView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>