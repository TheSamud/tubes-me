<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:fontFamily="@font/fira_family"
        android:visibility="gone"
        android:textStyle="bold"
        android:id="@+id/title"
        android:text="HALLO"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/kamboja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
            android:textStyle="bold"
            android:clickable="true"
            android:backgroundTint="@color/colorPrimary2"
            android:textColor="@color/blacji"
            android:background="@drawable/button_back"
            android:padding="@dimen/padding_min"
            android:text="Tambah Volume"
            android:layout_gravity="end"
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:visibility="gone"
            android:clickable="true"
            android:backgroundTint="@color/colorPrimary2"
            android:textColor="@color/blacji"
            android:background="@drawable/button_back"
            android:padding="@dimen/padding_min"
            android:text="Tambah Volume"
            android:layout_gravity="end"
            android:id="@+id/buttonAdd2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textStyle="bold"
            android:visibility="gone"
            android:clickable="true"
            android:backgroundTint="@color/colorPrimary2"
            android:textColor="@color/blacji"
            android:background="@drawable/button_back"
            android:padding="@dimen/padding_min"
            android:text="Tambah Volume"
            android:layout_gravity="end"
            android:id="@+id/buttonAdd3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="visible"
        android:background="@drawable/button_back"
        android:layout_margin="@dimen/padding_min"
        android:id="@+id/plate"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_weight="0.9"
                android:id="@+id/vol_tex"
                android:textStyle="bold"
                android:padding="@dimen/padding_min"
                android:text="VOLUME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/fira_family"
                android:clickable="true"
                android:textAlignment="center"
                android:layout_weight="0.1"
                android:text="X"
                android:layout_gravity="end"
                android:background="@drawable/bubu"
                android:backgroundTint="@android:color/white"
                android:textColor="@color/blacji"
                android:id="@+id/remov2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/titt_li"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:id="@+id/tv1"
                android:gravity="center"
                android:text="panjang"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:gravity="center"
                android:id="@+id/tv2"
                android:text="lebar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:clickable="true"
                android:gravity="center"
                android:id="@+id/tv3"
                android:text="tinggi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/tv4"
                android:text="tinggi"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:visibility="gone"
                android:gravity="center"
                android:id="@+id/tv5"
                android:text="Konversi Berat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/content_li"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:backgroundTint="@color/blacji"
                android:fontFamily="@font/fira_family2"
                android:textColorHint="@color/blacji2"
                android:textColor="@color/blacji"
                android:id="@+id/ed1"
                android:hint="panjang"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <EditText
                android:backgroundTint="@color/blacji"
                android:fontFamily="@font/fira_family2"
                android:textColorHint="@color/blacji2"
                android:textColor="@color/blacji"
                android:id="@+id/ed2"
                android:hint="lebar"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <EditText
                android:backgroundTint="@color/blacji"
                android:fontFamily="@font/fira_family2"
                android:textColorHint="@color/blacji2"
                android:textColor="@color/blacji"
                android:id="@+id/ed3"
                android:hint="tinggi"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <EditText
                android:backgroundTint="@color/blacji"
                android:fontFamily="@font/fira_family2"
                android:textColorHint="@color/blacji2"
                android:textColor="@color/blacji"
                android:visibility="gone"
                android:id="@+id/ed4"
                android:hint="tinggi"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"/>
            <Spinner
                android:fontFamily="@font/fira_family"
                android:backgroundTint="@color/blacji"
                android:visibility="gone"
                android:id="@+id/sp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>