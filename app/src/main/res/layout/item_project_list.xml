<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_min">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/item_layote"
            android:clickable="true"
            android:longClickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:background="@drawable/bubu"
                android:id="@+id/item_home_preview"
                android:padding="@dimen/padding_dialog"
                android:layout_margin="5dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_home_black_24dp"
                android:backgroundTint="@color/colorPrimary"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_margin="@dimen/padding_min"
                    android:textColor="@color/blacji"
                    android:fontFamily="@font/fira_family2"
                    android:id="@+id/tv_nama_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA PROJECT"/>
                <TextView
                    android:layout_marginLeft="@dimen/padding_min"
                    android:textColor="@color/blacji2"
                    android:fontFamily="@font/fira_family2"
                    android:id="@+id/tv_lokasi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOKASI"/>
                <TextView
                    android:layout_margin="@dimen/padding_min"
                    android:textColor="@color/blacji"
                    android:fontFamily="@font/fira_family"
                    android:id="@+id/tv_total_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.200.000.000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_margin="10dp"
                android:background="@drawable/bubu"
                android:backgroundTint="@color/colorPrimary2"
                android:id="@+id/detail_item"
                android:clickable="true"
                android:padding="@dimen/padding_min"
                android:gravity="center"
                android:text="Detail"
                android:layout_weight="1"
                android:layout_width="@dimen/button_weidth"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_margin="10dp"
                android:background="@drawable/bubu"
                android:backgroundTint="@color/colorPrimary"
                android:id="@+id/edit_item"
                android:clickable="true"
                android:padding="@dimen/padding_min"
                android:gravity="center"
                android:text="Edit"
                android:layout_weight="1"
                android:layout_width="@dimen/button_weidth"
                android:layout_height="wrap_content" />
            <TextView
                android:textStyle="bold"
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_margin="10dp"
                android:background="@drawable/bubu"
                android:backgroundTint="@color/colorPrimary3"
                android:id="@+id/hapus_item"
                android:clickable="true"
                android:padding="@dimen/padding_min"
                android:gravity="center"
                android:text="Hapus"
                android:layout_weight="1"
                android:layout_width="@dimen/button_weidth"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>