<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <EditText

            android:fontFamily="@font/fira_family2"
            android:textColor="@color/blacji"
            android:textColorHint="@color/blacji2"
            android:backgroundTint="@color/blacji2"
            android:hint="Pekerjaan"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary3"
            android:fontFamily="@font/fira_family2"
            android:textAlignment="center"
            android:padding="@dimen/padding_min"
            android:text="delete"
            android:textColor="@color/blacji"
            android:layout_margin="10dp"
            android:background="@drawable/bubu"
            android:layout_width="@dimen/button_weidth"
            android:layout_height="wrap_content" />
        <TextView
            android:textStyle="bold"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary2"
            android:fontFamily="@font/fira_family2"
            android:textAlignment="center"
            android:padding="@dimen/padding_min"
            android:text="edit"
            android:textColor="@color/blacji"
            android:layout_margin="10dp"
            android:background="@drawable/bubu"
            android:layout_width="@dimen/button_weidth"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>