<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="5dp"
        android:background="@drawable/button_back"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginLeft="@dimen/padding_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:padding="5dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:id="@+id/edt_title"
                android:text="Mandor"
                android:textSize="40px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:textColorHint="@color/blacji2"
                android:layout_toRightOf="@+id/edt_title"
                android:layout_toLeftOf="@+id/satuan_o"
                android:id="@+id/edt_text"
                android:inputType="numberDecimal"
                android:gravity="right"
                android:hint="0.0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textColor="@color/blacji"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/satuan_o"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                android:padding="@dimen/padding_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OhjhvH"/>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>