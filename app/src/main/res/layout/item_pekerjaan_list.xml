<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_min">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="@dimen/padding_dialog"
            android:paddingRight="@dimen/padding_dialog"
            android:paddingLeft="@dimen/padding_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:textColor="@color/blacji"
                    android:fontFamily="@font/fira_family2"
                    android:id="@+id/tv_nama_project"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NAMA PROJECT"/>
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/blacji2"
                    android:fontFamily="@font/fira_family"
                    android:id="@+id/tv_total_harga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp.200.000.000"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:background="@drawable/bubu"
                android:backgroundTint="@color/colorPrimary4"
                android:textColor="@color/blacji"
                android:id="@+id/edit_item"
                android:clickable="true"
                android:padding="@dimen/padding_min"
                android:gravity="center"
                android:text="Edit"
                android:layout_weight="1"
                android:layout_width="@dimen/button_weidth"
                android:layout_height="wrap_content" />
            <TextView
                android:fontFamily="@font/fira_family2"
                android:textStyle="bold"
                android:backgroundTint="@color/colorPrimary3"
                android:layout_margin="10dp"
                android:background="@drawable/bubu"
                android:textColor="@color/blacji"
                android:id="@+id/hapus_item"
                android:clickable="true"
                android:padding="@dimen/padding_min"
                android:gravity="center"
                android:text="Hapus"
                android:layout_weight="1"
                android:layout_width="@dimen/button_weidth"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>