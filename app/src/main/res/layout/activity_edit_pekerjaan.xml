<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/confirm_order_mail_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo_trans"/>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/confirm_order_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/confirm_order_toolbar_layoute"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:title="NAMA PROJECT">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
    <ScrollView
        android:layout_below="@+id/confirm_order_appbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/padding_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/fira_family2"
                                android:padding="@dimen/padding_min"
                                android:textStyle="bold"
                                android:textColor="@color/blacji"
                                android:backgroundTint="@color/colorPrimary2"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Volume">

                            </TextView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycleVolume"
                                tools:itemCount="2"
                                tools:listitem="@layout/item_volume_edite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:fontFamily="@font/fira_family2"
                                android:id="@+id/tv_hasil"
                                android:background="@drawable/button_back"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/blacji"
                                android:layout_gravity="end"
                                android:padding="@dimen/padding_min"
                                android:layout_width="wrap_content"
                                android:text="1000"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_margin="@dimen/padding_min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:fontFamily="@font/fira_family2"
                                android:padding="@dimen/padding_min"
                                android:textColor="@color/blacji"
                                android:textStyle="bold"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Analisa Harga Satuan">

                            </TextView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recycle_koefisien"
                                tools:listitem="@layout/item_analisa_harga_satuan"
                                android:layout_width="match_parent"
                                tools:itemCount="1"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:fontFamily="@font/fira_family2"
                                android:id="@+id/tv_hasil_jum"
                                android:background="@drawable/button_back"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/blacji"
                                android:layout_gravity="end"
                                android:padding="@dimen/padding_min"
                                android:layout_width="wrap_content"
                                android:text="1000 OH"
                                android:layout_height="wrap_content"/>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3">
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:padding="@dimen/padding_min"
                                    android:text="Overhead + profit"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"/>
                                <EditText
                                    android:backgroundTint="@color/blacji"
                                    android:id="@+id/edt_percenta"
                                    android:inputType="numberDecimal"
                                    android:layout_weight="0.9"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:padding="@dimen/padding_min"
                                    android:text="%"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.95"/>
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:textAlignment="textEnd"
                                    android:padding="@dimen/padding_min"
                                    android:id="@+id/edt_profit"
                                    android:text="sass"
                                    android:layout_weight="0.65"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:padding="@dimen/padding_min"
                                    android:text="Harga Satuan Pekerjaan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"/>
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:textAlignment="textEnd"
                                    android:padding="@dimen/padding_min"
                                    android:id="@+id/edt_hsat"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="1">
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:padding="@dimen/padding_min"
                                    android:text="Harga Satuan Volume"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.5"/>
                                <TextView
                                    android:fontFamily="@font/fira_family2"
                                    android:textColor="@color/blacji"
                                    android:padding="@dimen/padding_min"
                                    android:textAlignment="textEnd"
                                    android:id="@+id/edt_hsatvol"
                                    android:layout_weight="0.5"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"/>
                            </LinearLayout>
                            <TextView
                                android:fontFamily="@font/fira_family2"
                                android:id="@+id/tv_hasil_jumper"
                                android:text="hallo"
                                android:background="@drawable/button_back"
                                android:backgroundTint="@color/colorPrimary"
                                android:textColor="@color/blacji"
                                android:layout_gravity="end"
                                android:padding="@dimen/padding_min"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>